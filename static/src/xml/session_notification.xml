<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="SessionNotificationTemplate">
        <div class="o_session_notification_container">
            <div class="alert alert-info">
                <h4>Sessiya Bildiriş Sistemi</h4>
                <p>Sessiya bildiriş sistemi aktivdir. Sessiya vaxtı bitdikdə avtomatik bildiriş alacaqsınız.</p>
                <div class="mt-3">
                    <div class="form-group">
                        <label for="max_checks">Maksimum yoxlama sayı (0 = limitsiz):</label>
                        <input type="number" id="max_checks" class="form-control" min="0" value="0"/>
                    </div>
                    <button type="button" class="btn btn-primary mt-2 set_max_checks">
                        Maksimum Sayını Təyin Et
                    </button>
                    <button type="button" class="btn btn-success mt-2 ml-2 reset_checks">
                        Yoxlamaları Sıfırla
                    </button>
                    <button type="button" class="btn btn-danger mt-2 ml-2 stop_checks">
                        Yoxlamaları Dayandır
                    </button>
                </div>
                <div class="mt-3">
                    <div class="check_counter">
                        Yoxlama sayı: <span class="counter_value">0</span>
                    </div>
                    <div class="check_status">
                        Status: <span class="status_value">Aktiv</span>
                    </div>
                </div>
                
                <div class="mt-4 active_sessions_container">
                    <h5>Aktiv Sessiyalar</h5>
                    <div class="no_active_sessions">Hal-hazırda aktiv sessiya yoxdur</div>
                    <div class="active_sessions_list">
                        <!-- Active sessions will be added here dynamically -->
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>
