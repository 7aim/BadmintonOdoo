<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Təhlükəsizlik qrupları -->
        <record id="group_volan_admin" model="res.groups">
            <field name="name">Volan / Admin</field>
            <field name="category_id" ref="base.module_category_services"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_admin'))]"/>
        </record>

        <record id="group_volan_trainer" model="res.groups">
            <field name="name">Volan / Məşqçi</field>
            <field name="category_id" ref="base.module_category_services"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_volan_sales" model="res.groups">
            <field name="name">Volan / Satıcı</field>
            <field name="category_id" ref="base.module_category_services"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_volan_supervisor" model="res.groups">
            <field name="name">Volan / Nəzarətçi</field>
            <field name="category_id" ref="base.module_category_services"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>
    </data>

    <!-- Qeyd qaydaları -->
    <data noupdate="1">
        <!-- Badminton Session qaydaları -->
        <record id="rule_badminton_session_all" model="ir.rule">
            <field name="name">Badminton Session: bütün qeydlər</field>
            <field name="model_id" ref="model_badminton_session"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_volan_admin'))]"/>
        </record>
        
        <record id="rule_badminton_sale_all" model="ir.rule">
            <field name="name">Badminton Sale: bütün qeydlər</field>
            <field name="model_id" ref="model_badminton_sale"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_volan_admin')), (4, ref('group_volan_sales'))]"/>
        </record>
        
        <record id="rule_cash_flow_all" model="ir.rule">
            <field name="name">Cash Flow: bütün qeydlər</field>
            <field name="model_id" ref="model_volan_cash_flow"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_volan_admin')), (4, ref('group_volan_sales'))]"/>
        </record>
        
        <record id="rule_badminton_lesson_all" model="ir.rule">
            <field name="name">Badminton Lesson: bütün qeydlər</field>
            <field name="model_id" ref="model_badminton_lesson_simple"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_volan_admin')), (4, ref('group_volan_sales')), (4, ref('group_volan_trainer'))]"/>
        </record>
        
        <record id="rule_basketball_lesson_all" model="ir.rule">
            <field name="name">Basketball Lesson: bütün qeydlər</field>
            <field name="model_id" ref="model_basketball_lesson_simple"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_volan_admin')), (4, ref('group_volan_sales')), (4, ref('group_volan_trainer'))]"/>
        </record>
    </data>
</odoo>