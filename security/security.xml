<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Volan Yasamal Kateqoriyası -->
        <record model="ir.module.category" id="module_category_volan_yasamal">
            <field name="name">Volan Yasamal</field>
            <field name="description">Volan Yasamal Badminton modulu üçün istifadəçi rolları</field>
            <field name="sequence">25</field>
        </record>
        
        <!-- Volan Yasamal Qrupları -->
        <record id="group_volan_satici" model="res.groups">
            <field name="name">Yasamal Satıcı</field>
            <field name="category_id" ref="module_category_volan_yasamal"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_volan_mesqci" model="res.groups">
            <field name="name">Yasamal Məşqçi</field>
            <field name="category_id" ref="module_category_volan_yasamal"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_volan_nezaretci" model="res.groups">
            <field name="name">Yasamal Nəzarətçi</field>
            <field name="category_id" ref="module_category_volan_yasamal"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_volan_admin" model="res.groups">
            <field name="name">Yasamal Admin</field>
            <field name="category_id" ref="module_category_volan_yasamal"/>
            <field name="implied_ids" eval="[(4, ref('group_volan_satici')), (4, ref('group_volan_mesqci')), (4, ref('group_volan_nezaretci'))]"/>
            <field name="users" eval="[(4, ref('base.user_admin'))]"/>
        </record>

        <!-- Go Basketbol Kateqoriyası -->
        <record model="ir.module.category" id="module_category_go_basketbol">
            <field name="name">Go Basketbol</field>
            <field name="description">Go Basketbol modulu üçün istifadəçi rolları</field>
            <field name="sequence">26</field>
        </record>

        <!-- Go Basketbol Qrupları -->
        <record id="group_go_basketbol_mesqci" model="res.groups">
            <field name="name">Go Basketbol Məşqçi</field>
            <field name="category_id" ref="module_category_go_basketbol"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_go_basketbol_satici" model="res.groups">
            <field name="name">Go Basketbol Satıcı</field>
            <field name="category_id" ref="module_category_go_basketbol"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_go_basketbol_admin" model="res.groups">
            <field name="name">Go Basketbol Admin</field>
            <field name="category_id" ref="module_category_go_basketbol"/>
            <field name="implied_ids" eval="[(4, ref('group_go_basketbol_satici')), (4, ref('group_go_basketbol_mesqci'))]"/>
            <field name="users" eval="[(4, ref('base.user_admin'))]"/>
        </record>

        <!-- Volan Yasamal Partner Rules -->
        <record id="rule_partner_yasamal_only" model="ir.rule">
            <field name="name">Partners: Yalnız Yasamal Filialı</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="domain_force">[('branch', '=', 'yasamal')]</field>
            <field name="groups" eval="[(4, ref('group_volan_satici')), (4, ref('group_volan_nezaretci'))]"/>
        </record>
        
        <record id="rule_partner_admin_all" model="ir.rule">
            <field name="name">Partners: Admin bütün filialları görür</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_volan_admin'))]"/>
        </record>
        
        <record id="rule_partner_trainer_yasamal" model="ir.rule">
            <field name="name">Partners: Məşqçi yalnız özünü görür</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="domain_force">[('user_ids', 'in', [user.id])]</field>
            <field name="groups" eval="[(4, ref('group_volan_mesqci'))]"/>
        </record>

        <!-- Go Basketbol Partner Rules -->
        <record id="rule_partner_go_basketbol_mesqci" model="ir.rule">
            <field name="name">Partners: Basketbol Məşqçi yalnız özünü görür</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="domain_force">[('user_ids', 'in', [user.id])]</field>
            <field name="groups" eval="[(4, ref('group_go_basketbol_mesqci'))]"/>
        </record>

        <record id="rule_partner_go_basketbol_satici" model="ir.rule">
            <field name="name">Partners: Basketbol Satıcı basketbol müştərilərini görür</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="domain_force">[('branch', '=', 'yasamal'), ('sport_type', 'in', ['basketball', 'both'])]</field>
            <field name="groups" eval="[(4, ref('group_go_basketbol_satici'))]"/>
        </record>

        <record id="rule_partner_go_basketbol_admin" model="ir.rule">
            <field name="name">Partners: Basketbol Admin bütün basketbol müştərilərini görür</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="domain_force">[('branch', '=', 'yasamal'), ('sport_type', 'in', ['basketball', 'both'])]</field>
            <field name="groups" eval="[(4, ref('group_go_basketbol_admin'))]"/>
        </record>

    </data>
</odoo>