<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Her 5 deqiqede bir, vaxtı bitmiş sessiyaları tamamla -->
        <record id="ir_cron_auto_complete_badminton_sessions" model="ir.cron">
            <field name="name">Badminton: Vaxtı bitmiş sessiyaları tamamla</field>
            <field name="model_id" ref="model_badminton_session"/>
            <field name="state">code</field>
            <field name="code">model._auto_complete_expired_sessions()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">minutes</field>
            <field name="active" eval="True"/>
        </record>

        <!-- 10-min window notifier (ONE time per session end_time thanks to warn10_sent) -->
        <record id="ir_cron_badminton_session_warning" model="ir.cron">
            <field name="name">Badminton: 5 dəq qalmış xəbərdarlıq</field>
            <field name="model_id" ref="model_badminton_session"/>
            <field name="state">code</field>
            <field name="code">model.cron_send_session_warnings()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">minutes</field>
            <field name="active" eval="True"/>
            <field name="user_id" ref="base.user_admin"/>
        </record>

        <record id="ir_cron_badminton_monthly_balance_expiry" model="ir.cron">
            <field name="name">Badminton: Aylıq paket balanslarını sil</field>
            <field name="model_id" ref="model_badminton_monthly_balance"/>
            <field name="state">code</field>
            <field name="code">model.cron_expire_monthly_balances()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active" eval="True"/>
            <field name="user_id" ref="base.user_admin"/>
        </record>

        <!-- Basketbol abunəlik ödəniş statusunu hər gün yenilə -->
        <record id="ir_cron_basketball_subscription_payment_status" model="ir.cron">
            <field name="name">Basketbol: Abunəlik ödəniş statusunu yenilə</field>
            <field name="model_id" ref="model_basketball_lesson_simple"/>
            <field name="state">code</field>
            <field name="code">model.cron_update_subscription_payment_status()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active" eval="True"/>
            <field name="user_id" ref="base.user_admin"/>
        </record>

        <!-- Badminton abunəlik ödəniş statusunu hər gün yenilə -->
        <record id="ir_cron_badminton_subscription_payment_status" model="ir.cron">
            <field name="name">Badminton: Abunəlik ödəniş statusunu yenilə</field>
            <field name="model_id" ref="model_badminton_lesson_simple"/>
            <field name="state">code</field>
            <field name="code">model.cron_update_subscription_payment_status()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active" eval="True"/>
            <field name="user_id" ref="base.user_admin"/>
        </record>
    </data>
</odoo>
