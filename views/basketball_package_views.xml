<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Basketball Package Form View -->
    <record id="view_basketball_package_form" model="ir.ui.view">
        <field name="name">basketball.package.form</field>
        <field name="model">basketball.package</field>
        <field name="arch" type="xml">
            <form string="Basketbol Paketi">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="discount_percent"/>
                        </group>
                        <group>
                            <field name="active"/>
                        </group>
                    </group>
                    <group string="Qiymətlər">
                        <group>
                            <field name="adult_price"/>
                            <field name="child_price"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Basketball Package List View -->
    <record id="view_basketball_package_list" model="ir.ui.view">
        <field name="name">basketball.package.list</field>
        <field name="model">basketball.package</field>
        <field name="arch" type="xml">
            <list string="Basketbol Paketləri">
                <field name="name"/>
                <field name="discount_percent"/>
                <field name="adult_price"/>
                <field name="child_price"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Basketball Package Action -->
    <record id="action_basketball_package" model="ir.actions.act_window">
        <field name="name">Basketbol Paketləri</field>
        <field name="res_model">basketball.package</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Yeni basketbol paketi yaradın
            </p>
            <p>
                Basketbol paketlərini burada idarə edin.
            </p>
        </field>
    </record>
</odoo>
