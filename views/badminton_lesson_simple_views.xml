<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Badminton Lesson Simple Form View -->
    <record id="view_badminton_lesson_simple_form" model="ir.ui.view">
        <field name="name">badminton.lesson.simple.form</field>
        <field name="model">badminton.lesson.simple</field>
        <field name="arch" type="xml">
            <form string="Badminton Dərsi">
                <header>
                    <button name="action_confirm" string="Təsdiqlə" 
                            type="object" class="btn-primary"
                            invisible="state != 'draft'"/>
                    <!--button name="action_renew" string="Yenilə (+1 ay)" 
                            type="object" class="btn-success"
                            invisible="state != 'active'"/-->
                    <button name="action_freeze" string="Dondur" 
                            type="object" class="btn-warning"
                            invisible="state != 'active'"/>
                    <button name="action_unfreeze" string="Aktiv et" 
                            type="object" class="btn-info"
                            invisible="state != 'frozen'"/>
                    <button name="action_cancel_request" string="Ləğv Tələbi" 
                            type="object" class="btn-danger"
                            invisible="state not in ['draft', 'active', 'frozen']"/>
                    <button name="action_restore_previous_state" string="Təsdiq et"
                        type="object" class="btn-secondary"
                        invisible="previous_state == False"/>
                    <!--button name="action_complete" string="Tamamla" 
                            type="object" class="btn-secondary"
                            invisible="state != 'active'"/-->
                    <button name="action_cancel" string="Ləğv et" 
                            type="object" class="btn-danger"
                            invisible="state not in ['draft', 'active', 'frozen']"/>
                    <field name="state" widget="statusbar" 
                           statusbar_visible="draft,active,frozen,completed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id" options="{'no_create': True}" 
                                   domain="[('is_company', '=', False), ('sport_type', 'in', ['badminton', 'both']), ('branch', '=', 'yasamal')]"/>
                            <field name="package_id"/>
                            <field name="group_ids" widget="many2many_tags" options="{'no_create': True}"/>
                            <field name="original_price" invisible="original_price == 0"/>
                            <field name="lesson_fee"/>
                        </group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="payment_date" help="İlkin başlanğıc tarixi (informativ)"/>
                        </group>
                    </group>
                    
                    <group string="Abunəlik Məlumatları">
                        <group>
                            <field name="total_months" readonly="1"/>
                            <field name="total_payments" readonly="1"/>
                        </group>
                        <group>
                            <field name="last_payment_date" readonly="1"/>
                            <field name="total_attendances" readonly="1"/>
                            <field name="substitute_count" readonly="1"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Ödənişlər" name="payments">
                            <field name="payment_ids">
                                <list string="Ödənişlər" editable="bottom">
                                    <field name="real_date"/>
                                    <field name="payment_date"/>
                                    <field name="payment_method_lesson"/>
                                    <field name="amount"/>
                                    <field name="cash_flow_id" readonly="1" optional="hide"/>
                                    <field name="notes"/>
                                </list>
                            </field>
                        </page>
                        <page string="Həftəlik Qrafik">
                            <field name="schedule_ids">
                                <list string="Həftəlik Qrafik" editable="bottom">
                                    <field name="day_of_week"/>
                                    <field name="start_time" widget="float_time"/>
                                    <field name="end_time" widget="float_time"/>
                                    <field name="is_active"/>
                                    <field name="notes"/>
                                </list>
                            </field>
                            <div class="mt-3">
                                <p><strong>Nümunə:</strong></p>
                                <ul>
                                    <li>Çərşənbə → 12:00–13:00</li>
                                    <li>Bazar → 11:00–12:00</li>
                                </ul>
                            </div>
                        </page>
                        <page string="Əvəzedici Dərslər">
                            <field name="substitute_ids" context="{'default_lesson_id': id}">
                                <list editable="bottom" string="Əvəzedici Dərslər" decoration-success="state=='used'" decoration-danger="state=='cancelled'">
                                    <field name="substitute_date"/>
                                    <field name="group_id"/>
                                    <field name="schedule_id"/>
                                    <field name="state"/>
                                    <field name="note"/>
                                </list>
                            </field>
                        </page>
                        <page string="Dərsə İştiraklar">
                            <field name="attendance_ids">
                                <list string="İştiraklar" create="false">
                                    <field name="attendance_date"/>
                                    <field name="attendance_time"/>
                                    <field name="schedule_id"/>
                                    <field name="qr_scanned"/>
                                    <field name="notes"/>
                                </list>
                            </field>
                        </page>
                        <!--page string="Abunəlik Dondurmaları">
                            <field name="freeze_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="freeze_start_date"/>
                                    <field name="freeze_end_date"/>
                                    <field name="freeze_days"/>
                                    <field name="state"/>
                                </list>
                            </field>
                            <group>
                                <field name="total_freeze_days" readonly="1"/>
                                <field name="current_freeze_id" readonly="1"/>
                            </group>
                        </page-->
                        <page string="Qeydlər">
                            <field name="notes" nolabel="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- badminton Lesson Simple List View -->
    <record id="view_badminton_lesson_simple_list" model="ir.ui.view">
        <field name="name">badminton.lesson.simple.list</field>
        <field name="model">badminton.lesson.simple</field>
        <field name="arch" type="xml">
            <list string="Badminton Dərsləri"
                  class="yasamal-badminton-subscription-list"
                  decoration-success="state=='active'" 
                  decoration-danger="subscription_payment_status in ['warning', 'overdue']" 
                  decoration-info="state=='completed'" decoration-muted="state=='cancelled'"
                  decoration-warning="state=='cancel_requested'">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="group_ids" widget="many2many_tags"/>
                <field name="lesson_fee"/>
                <field name="total_months"/>
                <field name="total_payments"/>
                <field name="last_payment_date"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="total_attendances"/>
                <field name="subscription_payment_status" invisible="1"/>
                <field name="state" widget="badge" decoration-success="state=='active'" decoration-info="state=='frozen'" decoration-danger="state=='cancelled'" decoration-warning="state=='cancel_requested'"/>
            </list>
        </field>
    </record>

    <!-- badminton Lesson Simple Search View -->
    <record id="view_badminton_lesson_simple_search" model="ir.ui.view">
        <field name="name">badminton.lesson.simple.search</field>
        <field name="model">badminton.lesson.simple</field>
        <field name="arch" type="xml">
            <search string="Badminton Dərsləri">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="group_ids"/>
                <filter string="Aktiv" name="active" domain="[('state','=','active')]"/>
                <filter string="Dondurulmuş" name="frozen" domain="[('state','=','frozen')]"/>
                <filter string="Tamamlanmış" name="completed" domain="[('state','=','completed')]"/>
                <filter string="Ləğv Tələbi" name="cancel_requested" domain="[('state','=','cancel_requested')]"/>
                <filter string="Ləğv Edilmiş" name="cancelled" domain="[('state','=','cancelled')]"/>
                <filter string="Ödəniş Xəbərdarlığı" name="payment_warning" domain="[('subscription_payment_status','=','warning')]"/>
                <filter string="Ödəniş Gecikməsi" name="payment_overdue" domain="[('subscription_payment_status','=','overdue')]"/>
                <group expand="0" string="Qruplaşdırma">
                    <filter string="Müştəri" name="group_partner" context="{'group_by': 'partner_id'}"/>
                    <filter string="Vəziyyət" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Qrup" name="group_group" context="{'group_by': 'group_ids'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_badminton_lesson_simple" model="ir.actions.act_window">
        <field name="name">Badminton Abunəlikləri</field>
        <field name="res_model">badminton.lesson.simple</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{'default_partner_id': context.get('active_id', False) if context.get('active_model') == 'res.partner' else False, 'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                İlk badminton abunəliyini yaradın!
            </p>
            <p>
                Bu bölmədə badminton müştərilərinin abunəliklərini idarə edə bilərsiniz.
            </p>
        </field>
    </record>
</odoo>
