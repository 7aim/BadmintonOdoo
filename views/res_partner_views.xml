<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_form_volan" model="ir.ui.view">
        <field name="name">res.partner.form.volan</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='vat']" position="after">
                <group string="Şəxsi Məlumatlar">
                    <field name="birth_date"/>
                    <field name="additional_info"/>
                </group>
                <group string="QR Kod">
                    <field name="qr_code_image" widget="image" string=" "/>
                </group>
                <group string="Badminton Balansı">
                    <field name="badminton_balance" style="font-size: 18px; font-weight: bold; color: #007bff;" 
                           invisible="[('id', '=', False)]"/>
                </group>
            </xpath>
            <xpath expr="//page[@name='internal_notes']" position="before">
                <page string="Badminton Məlumatları" name="badminton_info" invisible="[('is_company', '=', True)]">
                    <group string="Badminton Balansı">
                        <field name="badminton_balance" style="font-size: 18px; font-weight: bold; color: #007bff;"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>