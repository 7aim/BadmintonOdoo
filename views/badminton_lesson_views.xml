<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Badminton Lesson Form View -->
    <record id="view_badminton_lesson_form" model="ir.ui.view">
        <field name="name">badminton.lesson.form</field>
        <field name="model">badminton.lesson</field>
        <field name="arch" type="xml">
            <form string="Badminton Dərsi">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id" options="{'no_create': True}"/>
                            <field name="filial_id" options="{'no_create': True}"/>
                            <field name="instructor_id" options="{'no_create': True}" domain="[('is_company', '=', False)]"/>
                        </group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="lesson_fee"/>
                        </group>
                    </group>
                    <group>
                        <group string="Dərs Məlumatları">
                            <field name="total_lessons" readonly="1"/>
                            <field name="attended_lessons" readonly="1"/>
                            <field name="remaining_lessons" readonly="1"/>
                            <field name="total_amount" readonly="1"/>
                        </group>
                        <group string="Ödəniş Məlumatları">
                            <field name="payment_date" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Dərs Qrafiki">
                            <field name="schedule_ids">
                                <list string="Dərs Qrafiki" editable="bottom">
                                    <field name="lesson_date"/>
                                    <field name="lesson_time" widget="float_time"/>
                                    <field name="duration"/>
                                    <field name="day_of_week"/>
                                    <field name="is_completed"/>
                                    <field name="is_cancelled"/>
                                    <field name="notes"/>
                                </list>
                            </field>
                        </page>
                        <page string="İştiraklar">
                            <field name="attendance_ids">
                                <list string="İştiraklar" create="false">
                                    <field name="attendance_date"/>
                                    <field name="schedule_id"/>
                                    <field name="is_attended"/>
                                    <field name="qr_scanned"/>
                                    <field name="notes"/>
                                </list>
                            </field>
                        </page>
                        <page string="Qeydlər">
                            <field name="notes" nolabel="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Badminton Lesson list View -->
    <record id="view_badminton_lesson_list" model="ir.ui.view">
        <field name="name">badminton.lesson.list</field>
        <field name="model">badminton.lesson</field>
        <field name="arch" type="xml">
            <list string="Badminton Dərsləri" decoration-success="state=='active'" decoration-info="state=='confirmed'" decoration-muted="state=='cancelled'">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="filial_id"/>
                <field name="instructor_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="total_lessons"/>
                <field name="attended_lessons"/>
                <field name="total_amount"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- Badminton Lesson Search View -->
    <record id="view_badminton_lesson_search" model="ir.ui.view">
        <field name="name">badminton.lesson.search</field>
        <field name="model">badminton.lesson</field>
        <field name="arch" type="xml">
            <search string="Badminton Dərsləri">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="filial_id"/>
                <field name="instructor_id"/>
                <group expand="0" string="Qrupla">
                    <filter name="group_by_partner" string="Müştəri" context="{'group_by': 'partner_id'}"/>
                    <filter name="group_by_filial" string="Filial" context="{'group_by': 'filial_id'}"/>
                    <filter name="group_by_instructor" string="Müəllim" context="{'group_by': 'instructor_id'}"/>
                    <filter name="group_by_state" string="Vəziyyət" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action for Badminton Lessons -->
    <record id="action_badminton_lesson" model="ir.actions.act_window">
        <field name="name">Badminton Dərsləri</field>
        <field name="res_model">badminton.lesson</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Yeni badminton dərsi yaradın!
            </p>
            <p>
                Burada müştərilər üçün badminton dərsləri təşkil edə bilərsiniz.
            </p>
        </field>
    </record>

    <!-- Badminton Lesson Schedule list View -->
    <record id="view_badminton_lesson_schedule_list" model="ir.ui.view">
        <field name="name">badminton.lesson.schedule.list</field>
        <field name="model">badminton.lesson.schedule</field>
        <field name="arch" type="xml">
            <list string="Dərs Qrafiki">
                <field name="lesson_id"/>
                <field name="partner_id"/>
                <field name="filial_id"/>
                <field name="instructor_id"/>
                <field name="lesson_date"/>
                <field name="lesson_time" widget="float_time"/>
                <field name="duration"/>
                <field name="day_of_week"/>
                <field name="is_completed"/>
                <field name="is_cancelled"/>
            </list>
        </field>
    </record>

    <!-- Badminton Lesson Schedule Calendar View -->
    <record id="view_badminton_lesson_schedule_calendar" model="ir.ui.view">
        <field name="name">badminton.lesson.schedule.calendar</field>
        <field name="model">badminton.lesson.schedule</field>
        <field name="arch" type="xml">
            <calendar string="Dərs Qrafiki" date_start="lesson_date" color="filial_id">
                <field name="partner_id"/>
                <field name="instructor_id"/>
                <field name="lesson_time"/>
            </calendar>
        </field>
    </record>

    <!-- Action for Badminton Lesson Schedule -->
    <record id="action_badminton_lesson_schedule" model="ir.actions.act_window">
        <field name="name">Dərs Qrafiki</field>
        <field name="res_model">badminton.lesson.schedule</field>
        <field name="view_mode">calendar,list</field>
        <field name="context">{}</field>
    </record>

    <!-- Badminton Lesson Attendance list View -->
    <record id="view_badminton_lesson_attendance_list" model="ir.ui.view">
        <field name="name">badminton.lesson.attendance.list</field>
        <field name="model">badminton.lesson.attendance</field>
        <field name="arch" type="xml">
            <list string="Dərs İştirakları">
                <field name="lesson_id"/>
                <field name="partner_id"/>
                <field name="schedule_id"/>
                <field name="attendance_date"/>
                <field name="is_attended"/>
                <field name="qr_scanned"/>
                <field name="notes"/>
            </list>
        </field>
    </record>

    <!-- Action for Badminton Lesson Attendance -->
    <record id="action_badminton_lesson_attendance" model="ir.actions.act_window">
        <field name="name">Dərs İştirakları</field>
        <field name="res_model">badminton.lesson.attendance</field>
        <field name="view_mode">list</field>
        <field name="context">{}</field>
    </record>
</odoo>
