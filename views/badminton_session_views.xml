<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Badminton Sessiya Form Görünüşü -->
    <record id="view_badminton_session_form" model="ir.ui.view">
        <field name="name">badminton.session.form</field>
        <field name="model">badminton.session</field>
        <field name="arch" type="xml">
            <form string="Badminton Sessiyası">
                <header>
                    <button name="complete_session" string="Sessiyanı Tamamla" 
                            type="object" class="btn-primary"
                            invisible="state not in ['active', 'extended']"/>
                    <button name="extend_session" string="1 Saat Uzat" 
                            type="object" class="btn-warning"
                            invisible="state not in ['active', 'extended']"/>
                    <field name="state" widget="statusbar" 
                           statusbar_visible="draft,active,extended,completed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="start_time"/>
                            <field name="end_time"/>
                            <field name="qr_scanned" readonly="1"/>
                        </group>
                        <group>
                            <field name="duration_hours"/>
                            <field name="extended_time" readonly="1"/>
                            <field name="hourly_rate"/>
                            <field name="total_amount" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Qeydlər">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Badminton Sessiya list Görünüşü -->
    <record id="view_badminton_session_list" model="ir.ui.view">
        <field name="name">badminton.session.list</field>
        <field name="model">badminton.session</field>
        <field name="arch" type="xml">
            <list string="Badminton Sessiyaları" decoration-success="state=='completed'" 
                  decoration-warning="state=='active'" decoration-info="state=='extended'">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="start_time"/>
                <field name="end_time"/>
                <field name="duration_hours"/>
                <field name="total_amount"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- Aktiv Sessiyalar üçün xüsusi görünüş -->
    <record id="view_active_sessions_list" model="ir.ui.view">
        <field name="name">active.badminton.session.list</field>
        <field name="model">badminton.session</field>
        <field name="arch" type="xml">
            <list string="Aktiv Sessiyalar" decoration-warning="state=='active'" 
                  decoration-info="state=='extended'" create="false">
                <field name="partner_id"/>
                <field name="start_time"/>
                <field name="end_time"/>
                <field name="total_amount"/>
                <field name="state"/>
                <button name="extend_session" string="Uzat" type="object" icon="fa-clock-o"/>
                <button name="complete_session" string="Tamamla" type="object" icon="fa-check"/>
            </list>
        </field>
    </record>

    <!-- QR Kod Oxuma Görünüşü -->
    <record id="view_qr_scanner_form" model="ir.ui.view">
        <field name="name">qr.scanner.form</field>
        <field name="model">badminton.session</field>
        <field name="arch" type="xml">
            <form string="QR Kod Oxuyucu">
                <sheet>
                    <div class="oe_title">
                        <h1>QR Kod Oxuyucu</h1>
                    </div>
                    <group>
                        <field name="partner_id" string="Müştəri Seçin (Manual)"/>
                        <field name="duration_hours"/>
                        <field name="hourly_rate"/>
                    </group>
                    <footer>
                        <button name="start_session_manual" string="Sessiyanı Başlat" 
                                type="object" class="btn-primary"/>
                        <button string="Ləğv et" class="btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Kort İdarəetməsi -->
    <record id="view_badminton_court_form" model="ir.ui.view">
        <field name="name">badminton.court.form</field>
        <field name="model">badminton.court</field>
        <field name="arch" type="xml">
            <form string="Badminton Kortu">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="is_available"/>
                            <field name="hourly_rate"/>
                        </group>
                        <group>
                            <field name="current_session_id" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_badminton_court_list" model="ir.ui.view">
        <field name="name">badminton.court.list</field>
        <field name="model">badminton.court</field>
        <field name="arch" type="xml">
            <list string="Kortlar" decoration-success="is_available==True" 
                  decoration-danger="is_available==False">
                <field name="name"/>
                <field name="is_available"/>
                <field name="current_session_id"/>
                <field name="hourly_rate"/>
            </list>
        </field>
    </record>

    <!-- Menular -->
    <record id="action_badminton_session" model="ir.actions.act_window">
        <field name="name">Bütün Sessiyalar</field>
        <field name="res_model">badminton.session</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
    </record>

    <record id="action_active_sessions" model="ir.actions.act_window">
        <field name="name">Aktiv Sessiyalar</field>
        <field name="res_model">badminton.session</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_active_sessions_list"/>
        <field name="domain">[('state', 'in', ['active', 'extended'])]</field>
        <field name="context">{'create': False}</field>
    </record>

    <record id="action_qr_scanner" model="ir.actions.act_window">
        <field name="name">QR Kod Oxuyucu</field>
        <field name="res_model">badminton.session</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_qr_scanner_form"/>
        <field name="target">new</field>
        <field name="context">{'default_state': 'draft'}</field>
    </record>

    <record id="action_badminton_courts" model="ir.actions.act_window">
        <field name="name">Kortlar</field>
        <field name="res_model">badminton.court</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Ana Menu -->
    <menuitem id="menu_badminton_main" name="Badminton İdarəetməsi" sequence="100"/>
    
    <menuitem id="menu_badminton_sessions" name="Sessiyalar" parent="menu_badminton_main" sequence="10"/>
    <menuitem id="menu_active_sessions" name="Aktiv Sessiyalar" parent="menu_badminton_sessions" 
              action="action_active_sessions" sequence="1"/>
    <menuitem id="menu_all_sessions" name="Bütün Sessiyalar" parent="menu_badminton_sessions" 
              action="action_badminton_session" sequence="2"/>
    <menuitem id="menu_qr_scanner" name="QR Oxuyucu" parent="menu_badminton_sessions" 
              action="action_qr_scanner" sequence="3"/>
    
    <menuitem id="menu_badminton_config" name="Tənzimləmələr" parent="menu_badminton_main" sequence="20"/>
    <menuitem id="menu_courts" name="Kortlar" parent="menu_badminton_config" 
              action="action_badminton_courts" sequence="1"/>

</odoo>
