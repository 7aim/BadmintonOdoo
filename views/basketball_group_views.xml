<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Basketbol Group Form View -->
    <record id="view_basketball_group_form" model="ir.ui.view">
        <field name="name">basketball.group.form</field>
        <field name="model">basketball.group</field>
        <field name="arch" type="xml">
            <form string="Basketbol Qrupu">
                <sheet>
                    <div class="oe_title">
                            <field name="code" placeholder="Qrup kodu..." readonly="1"/>
                        <h1>
                            <field name="name" placeholder="Qrup adı..."/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="is_active"/>
                        </group>
                        <group>
                            <field name="member_count" readonly="1"/>
                        </group>
                    </group>
                    
                    <group string="Təsvir">
                        <field name="description" nolabel="1"/>
                    </group>
                    
                    <notebook>
                        <page string="Qrup Qrafiki">
                            <field name="schedule_ids">
                                <list string="Həftəlik Qrafik" editable="bottom">
                                    <field name="day_of_week"/>
                                    <field name="start_time" widget="float_time"/>
                                    <field name="end_time" widget="float_time"/>
                                    <field name="is_active"/>
                                    <field name="notes"/>
                                </list>
                            </field>
                            <div class="mt-3">
                                <p><strong>Nümunə:</strong></p>
                                <ul>
                                    <li>Çərşənbə → 12:00–13:00</li>
                                    <li>Bazar → 11:00–12:00</li>
                                </ul>
                            </div>
                        </page>
                        <page string="Qrup Üzvləri">
                            <field name="member_ids" domain="[('state', 'in', ['active', 'frozen'])]">
                                <list string="Qrup Üzvləri" create="false">
                                    <field name="partner_id"/>
                                    <field name="state" decoration-info="state == 'frozen'" decoration-success="state == 'active'"/>
                                    <field name="start_date"/>
                                    <field name="end_date"/>
                                    <field name="total_months"/>
                                    <field name="total_attendances"/>
                                    <field name="state"/>
                                </list>
                            </field>
                        </page>
                        <page string="Qeydlər">
                            <field name="notes" nolabel="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Basketbol Group List View -->
    <record id="view_basketball_group_list" model="ir.ui.view">
        <field name="name">basketball.group.list</field>
        <field name="model">basketball.group</field>
        <field name="arch" type="xml">
            <list string="Basketbol Qrupları" decoration-success="is_active==True" 
                  decoration-muted="is_active==False">
                <field name="code"/>
                <field name="name"/>
                <field name="member_count" sum="True"/>
                <field name="is_active"/>
            </list>
        </field>
    </record>

    <!-- Basketbol Group Search View -->
    <record id="view_basketball_group_search" model="ir.ui.view">
        <field name="name">basketball.group.search</field>
        <field name="model">basketball.group</field>
        <field name="arch" type="xml">
            <search string="Basketbol Qrupları">
                <field name="name"/>
                <filter string="Aktiv Qruplar" name="active" domain="[('is_active', '=', True)]"/>
                <filter string="Passiv Qruplar" name="inactive" domain="[('is_active', '=', False)]"/>
                <group expand="0" string="Qruplaşdırma">
                    <filter string="Aktivlik" name="group_active" context="{'group_by': 'is_active'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_basketball_group" model="ir.actions.act_window">
        <field name="name">Basketbol Qrupları</field>
        <field name="res_model">basketball.group</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'default_is_active': True}</field>
    </record>

</odoo>
